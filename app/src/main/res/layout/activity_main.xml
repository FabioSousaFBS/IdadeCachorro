<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="idadedecachorro.cursoandroid.com.idadedecachorro.MainActivity"
    android:background="@color/background_padrao">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/icon_pet"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_marginTop="144dp"
        android:id="@+id/edtIdade"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:background="@android:color/background_light" />

    <TextView
        android:text="Digite a idade de seu cachorro, para descobrir a idade de em anos humanos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="24sp"
        android:layout_below="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:background="@color/background_texto"
        android:textColor="@android:color/background_light"
        android:padding="10dp" />

    <Button
        android:text="@string/descobrir_idade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtIdade"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:id="@+id/botaoDescobrirIdade" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/botaoDescobrirIdade"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:id="@+id/txtResposta"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:background="@color/background_texto" />
</RelativeLayout>
